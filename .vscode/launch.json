{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: main.py with debug config",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py", // ${file}
            "console": "integratedTerminal",
            "args": ["--config", "configs/debug.yaml"],
            "justMyCode": true,
            "rules": [
                    {"path": "${workspaceFolder}/utils/*.py", "include": false},
                    {"path": "${workspaceFolder}/models/combiner.py", "include": false},
            ]
        },
        {
            "name": "Run start_training.sh",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "/bin/bash",
            "runtimeArgs": [
                "-c",
                "./start_training.sh"
            ],
            "console": "integratedTerminal"
        }
    ]
}